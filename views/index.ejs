<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
  </head>
  <body class="bg-zinc-900 text-white w-full min-h-screen">
    <div class="form p-10">
      <form action="/create" method="POST">
        <input
          class="mt-2 w-full rounded-md outline-none block px-5 py-2 bg-zinc-800"
          name="title"
          type="text"
          placeholder="Title goes hare..."
        />
        <textarea
          class="mt-2 w-full rounded-md outline-none block px-5 py-2 bg-zinc-800 resize-none"
          name="details"
          placeholder="Write your task details hare.."
        ></textarea>
        <input
          class="mt-2 bg-blue-600 px-5 py-2 rounded-md cursor-pointer"
          type="submit"
          value="Create task!"
        />
      </form>
    </div>
    <div class="task p-10 flex flex-wrap gap-3">
      <% if(files.length > 0){ files.forEach(function(val){ %>
      <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
        <h1 class="text-2xl tracking-tighter"><%= val %></h1>
        <a href="/files/<%= val %>" class="text-blue-500 block mt-3 text-right">Read More.</a>
      </div>
      <% }) } else { %> 
      <h3 class="text-zinc-600">no tasks yet.</h3>
      <% } %>
    </div>
  </body>
</html>
